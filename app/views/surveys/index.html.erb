<p id="notice"><%= notice %></p>

<h1>Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>Pais</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.order(created_at: :desc).each do |survey| %>
      <tr>
        <td><%= survey.score %></td>
        <td><%= survey.country %></td>
        <td><%= survey.created_at.in_time_zone("Eastern Time (US & Canada)") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path %>
